<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TimeEntryForm" />

    <style name="TimeEntryForm.Label">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/time_entry_form_date_label_text_size</item>
    </style>

    <style name="TimeEntryForm.DatePicker">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="TimeEntryForm.InputLarge">
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">@dimen/time_entry_form_input_text_size</item>
    </style>

    <style name="TimeEntryForm.InputSmall">
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">2</item>
        <item name="android:paddingEnd">@dimen/time_entry_form_input_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/time_entry_form_input_horizontal_padding</item>
        <item name="android:textSize">@dimen/time_entry_form_input_text_size</item>
    </style>

    <style name="TimeEntryForm.InputSmall.Hint" parent="TimeEntryForm.InputSmall">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TimeEntryForm.DurationLabel">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/time_entry_form_duration_label_text_size</item>
    </style>
</resources>
