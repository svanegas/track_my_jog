<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Welcome" />

    <style name="Welcome.ButtonsContainer">
        <item name="android:padding">@dimen/welcome_buttons_container_padding</item>
    </style>

    <style name="Welcome.BrandMessage">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">@dimen/welcome_brand_message_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/welcome_brand_message_horizontal_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/welcome_brand_message_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Welcome.RegisterButton" parent="@style/Widget.AppCompat.Button.Colored" />

    <style name="Welcome.LoginButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/welcome_login_button_padding</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
