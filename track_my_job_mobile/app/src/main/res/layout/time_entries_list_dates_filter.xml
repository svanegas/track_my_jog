<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_opaque"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        style="@style/TimeEntriesList.DateFilter.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_entries_list_dates_filter_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/time_entries_list_dates_filter_height"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/date_filter_from"
                style="@style/TimeEntriesList.DateFilter.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/time_entries_list_dates_filter_from"/>

            <View
                style="@style/TimeEntriesList.DateFilter.BottomLine"/>
        </FrameLayout>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/time_entries_list_dates_filter_separator"
            android:textSize="@dimen/time_entries_list_filter_text_size"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/date_filter_to"
                style="@style/TimeEntriesList.DateFilter.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/time_entries_list_dates_filter_to"/>

            <View
                style="@style/TimeEntriesList.DateFilter.BottomLine"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
