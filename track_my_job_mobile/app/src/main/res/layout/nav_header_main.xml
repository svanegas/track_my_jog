<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_nav_header_height"
    android:background="@drawable/main_side_nav_header_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/activity_content_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/header_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/main_nav_header_vertical_spacing"
        app:srcCompat="@android:drawable/sym_def_app_icon"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/main_nav_header_vertical_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/role_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
